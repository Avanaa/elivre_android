<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:showIn="@layout/activity_form"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/form_title"
                android:hint="Escreva um tÃ­tulo"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/form_description"
                android:hint="O que ocorreu?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/button_bg_angry_face"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:id="@+id/form_btn_angry_face"
                    />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/button_bg_poker_face"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:id="@+id/form_btn_poker_face"
                    />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/button_bg_laughing_face"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:id="@+id/form_btn_happy_face"
                    />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/button_bg_free"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:id="@+id/form_btn_free"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textSize="20dp"
                    android:id="@+id/form_desc"
                    />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/ic_free_gray"
                    android:id="@+id/form_feedback"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>